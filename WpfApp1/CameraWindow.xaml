<Window x:Class="WpfApp1.CameraWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="CameraWindow" Height="540" Width="850" Closing="Window_Closing">
    <Border x:Name="ViewBorder" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="480" VerticalAlignment="Top" Width="640" Margin="9,15,0,0">
        <Image x:Name="LiveViewImage" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Border>
</Window>
